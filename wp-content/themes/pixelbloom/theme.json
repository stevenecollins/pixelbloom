{
  "title": "PixelBloom",
	"version": 3,
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"settings": {
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"color": {
			"custom": true,
			"customGradient": true,
			"defaultGradients": false,
			"defaultPalette": false,
			"gradients": [
				{
					"gradient": "linear-gradient(135deg, #0073aa 0%, #ff6b6b 100%)",
					"name": "Primary to Accent",
					"slug": "primary-to-accent"
				},
				{
					"gradient": "linear-gradient(135deg, #f8f9fa 0%, #343a40 100%)",
					"name": "Light to Dark",
					"slug": "light-to-dark"
				}
			],
			"palette": [
				{
					"color": "#0073aa",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#6c757d",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#ff6b6b",
					"name": "Accent",
					"slug": "accent"
				},
				{
					"color": "#ffffff",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#333333",
					"name": "Text",
					"slug": "text"
				},
				{
					"color": "#f8f9fa",
					"name": "Light",
					"slug": "light"
				},
				{
					"color": "#343a40",
					"name": "Dark",
					"slug": "dark"
				}
			]
		},
		"custom": {
			"stickyHeader": {
      	"enabled": true
    	},
			"spacing": {
				"large": "max(4rem, 10vw)",
				"medium": "max(2.5rem, 8vw)",
				"small": "max(1.25rem, 5vw)"
			},
			"typography": {
				"line-height": {
					"large": 1.8,
					"medium": 1.6,
					"small": 1.3,
					"tiny": 1.15
				}
			}
		},
		"layout": {
			"contentSize": "1140px",
			"wideSize": "1440px"
		},
		"spacing": {
			"blockGap": true,
			"defaultSpacingSizes": false,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{
					"name": "XSmall",
					"size": ".5rem",
					"slug": "x-small"
				},
				{
					"name": "Small",
					"size": "1rem",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "2rem",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "3rem",
					"slug": "large"
				}
			],
			"units": [
				"px",
				"em",
				"rem",
				"%",
				"vh",
				"vw"
			]
		},
		"typography": {
			"customFontSize": true,
			"defaultFontSizes": false,
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Poppins",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/poppins-400.woff2"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/poppins-700.woff2"
							]
						}
					],
					"fontFamily": "Poppins, sans-serif",
					"name": "Poppins",
					"slug": "poppins"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Nunito",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/nunito-400.woff2"
							]
						},
						{
							"fontFamily": "Nunito",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/nunito-700.woff2"
							]
						}
					],
					"fontFamily": "Nunito, sans-serif",
					"name": "Nunito",
					"slug": "nunito"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "14px",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "16px",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "18px",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "24px",
					"slug": "x-large"
				},
				{
					"name": "XX Large",
					"size": "32px",
					"slug": "xx-large"
				},
				{
					"name": "Huge",
					"size": "48px",
					"slug": "huge"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"spacing": {
					"padding": {
						"bottom": "0.75rem",
						"left": "1.5rem",
						"right": "1.5rem",
						"top": "0.75rem"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/code": {
				"border": {
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--light)",
					"text": "var(--wp--preset--color--dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "1.5rem"
					},
					"padding": {
						"bottom": "1rem",
						"left": "1.5rem",
						"right": "1.5rem",
						"top": "1rem"
					}
				},
				"typography": {
					"fontFamily": "monospace"
				}
			},
			"core/group": {
				"spacing": {
					"padding": "0"
				}
			},
			"core/heading": {
				"spacing": {
					"margin": {
						"bottom": "1rem",
						"top": "2rem"
					}
				}
			},
			"core/list": {
				"spacing": {
					"margin": {
						"bottom": "1.5rem"
					},
					"padding": {
						"left": "1.5rem"
					}
				}
			},
			"core/paragraph": {
				"spacing": {
					"margin": {
						"bottom": "1.5rem"
					}
				}
			},
			"core/quote": {
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"style": "solid",
						"width": "4px"
					}
				},
				"spacing": {
					"margin": {
						"bottom": "1.5rem"
					},
					"padding": {
						"left": "1.5rem"
					}
				},
				"typography": {
					"fontStyle": "italic"
				}
			},
			"core/cover": {
				"spacing": {
					"margin": {
						"bottom": "2rem"
					}
				}
			},
			"core/image": {
				"spacing": {
					"margin": {
						"bottom": "1.5rem"
					}
				}
			},
			"core/table": {
				"spacing": {
					"margin": {
						"bottom": "1.5rem"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/pullquote": {
				"border": {
					"width": "0",
					"style": "none"
				},
				"typography": {
					"fontStyle": "italic",
					"fontFamily": "var(--wp--preset--font-family--nunito)"
				},
				"spacing": {
					"margin": {
						"bottom": "2rem",
						"top": "2rem"
					},
					"padding": {
						"bottom": "1rem",
						"left": "2rem",
						"right": "2rem",
						"top": "1rem"
					}
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontSize": "var(--wp--preset--font-size--huge)",
					"fontStyle": "normal",
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontStyle": "normal",
					"fontWeight": "700",
					"lineHeight": "1.3"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700",
					"lineHeight": "1.4"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "700",
					"lineHeight": "1.4"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontWeight": "700",
					"lineHeight": "1.5"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"fontWeight": "700",
					"lineHeight": "1.5"
				}
			},
			"link": {
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent)"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"textDecoration": "none"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--nunito)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}